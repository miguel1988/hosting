<VirtualHost *:80>
        ServerAdmin @serv_ad@
        ServerName mysql.@serv_na@
        DocumentRoot /usr/share/phpmyadmin
        <Directory /usrshare/phpmyadmin>
                Options FollowSymLinks
                AllowOverride None
        </Directory>
        <Directory /usr/phpmyadmin>
                Options Indexes FollowSymLinks MultiViews
                AllowOverride None
                Order allow,deny
                allow from all
        </Directory>
        ScriptAlias /cgi-bin/ /usr/lib/cgi-bin/
        <Directory "/usr/lib/cgi-bin">
                AllowOverride None
                Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
                Order allow,deny
                Allow from all
        </Directory>
</VirtualHost>
